{
  "name": "gestionguias-api",
  "version": "0.1.0",
  "description": "API para gestión de turnos de guías turísticos en puerto de Cartagena",
  "main": "dist/src/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/src/server.js",

    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",

    "prisma:reset:docker": "docker compose exec api npx prisma migrate reset --force",
    "prisma:deploy:docker": "docker compose exec api npx prisma migrate deploy",
    "prisma:gen:docker": "docker compose exec api npx prisma generate",

    "prisma:reset:host": "cross-env DATABASE_URL=postgresql://postgres:postgres@localhost:5432/gestion_guias?schema=public prisma migrate reset --force",
    "prisma:deploy:host": "cross-env DATABASE_URL=postgresql://postgres:postgres@localhost:5432/gestion_guias?schema=public prisma migrate deploy",

    "seed": "prisma db seed",

    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "keywords": [
    "api",
    "express",
    "typescript",
    "prisma",
    "postgresql",
    "jwt"
  ],
  "author": "GestionGuias Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "argon2": "^0.44.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.2.0",
    "pino-http": "^10.3.0",
    "pino-pretty": "^11.2.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.16.11",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "prisma": "^5.22.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
